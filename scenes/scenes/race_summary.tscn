script/source = "extends Control

enum State {
  RACE_TALLY,
  TOURNAMENT_TALLY,
}

var state

func get_race_positions_tally():
  var text = \"\"
  var players = RaceSettings.get_setting('players').duplicate()
  players.sort_custom(func(a,b): return Race.final_positions[a.id] < Race.final_positions[b.id])
  for player_index in range(len(players)):
    text += str(player_index+1) + '. PLAYER ' + str(players[player_index].id) + ': +' + str(max(5 - Race.final_positions[players[player_index].id], 0)) + '\\n'
  return text

func get_tournament_summary_tally():
  var text = \"\"
  var players = RaceSettings.get_setting('players').duplicate()
  players.sort_custom(func(a,b): return Tournament.scores[a.id] > Tournament.scores[b.id])
  for player_index in range(len(players)):
    text += str(player_index+1) + '. PLAYER ' + str(players[player_index].id) + ': ' + str(Tournament.scores[players[player_index].id]) + '\\n'
  return text

func _ready():
  $Label.text = get_race_positions_tally()
  state = State.RACE_TALLY

func _physics_process(delta):
  if Input.is_action_just_pressed(\"ui_accept\"):
    if state == State.RACE_TALLY:
      state = State.TOURNAMENT_TALLY
      $Label.text = get_tournament_summary_tally()
    else:
      Tournament.advance()
"

